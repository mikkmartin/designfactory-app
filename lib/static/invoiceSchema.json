{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "Invoice",
  "required": [
    "fromName",
    "fromAddress",
    "fromRegNr",
    "toName",
    "toAddress",
    "toRegNr",
    "description",
    "items",
    "ibanNr",
    "ibanLabel"
  ],
  "properties": {
    "fromName": {
      "type": "string",
      "default": "Ettevõte OÜ"
    },
    "fromAddress": {
      "type": "string",
      "default": "Aadress 123b, Tallinn, Harjumaa, 00117"
    },
    "fromRegNr": {
      "type": "number",
      "default": 12702285
    },
    "toName": {
      "type": "string",
      "default": "Klient OÜ"
    },
    "toAddress": {
      "type": "string",
      "default": "Aadress 123b, Tallinn, Harjumaa, 00117"
    },
    "toRegNr": {
      "type": "number",
      "default": 12702285
    },
    "description": {
      "type": "string",
      "default": "Üks kõva veebipood"
    },
    "items": {
      "type": "array",
      "default": [
        {
          "title": "Disain",
          "description": "Et asi oleks nice",
          "price": 4500,
          "quantity": 1
        },
        {
          "title": "Arendus",
          "description": "Et asi töötaks",
          "price": 4500,
          "quantity": 1
        }
      ],
      "additionalItems": true,
      "items": {
        "oneOf": [
          {
            "type": "object",
            "default": {
              "title": "Disain",
              "description": "Et asi oleks nice",
              "price": 4500,
              "quantity": 1
            },
            "required": ["title", "price"],
            "properties": {
              "title": {
                "type": "string",
                "title": "Name",
                "description": "Name of the product/service.",
                "default": "Disain"
              },
              "description": {
                "type": "string",
                "default": "Et asi oleks nice"
              },
              "price": {
                "type": "integer",
                "default": 4500
              },
              "quantity": {
                "type": "integer",
                "default": 1
              }
            }
          }
        ]
      }
    },
    "ibanNr": {
      "type": "string",
      "default": "EE907700771001360230"
    },
    "ibanLabel": {
      "type": "string",
      "default": "LHV"
    },
    "email": {
      "type": "string",
      "examples": ["mikk.martin@gmail.com"],
      "default": ""
    },
    "website": {
      "type": "string",
      "examples": ["mikkmartin.co"],
      "default": ""
    },
    "fileName": {
      "type": "string",
      "default": "Arve_2019052201.pdf"
    },
    "invoiceNr": {
      "type": "integer",
      "default": 2019052201
    },
    "date": {
      "type": "string",
      "default": "22-05-2019"
    },
    "dueDate": {
      "type": "string",
      "default": "22-06-2019"
    },
    "tax": {
      "type": "string",
      "default": "0%"
    },
    "paidInCash": {
      "type": "boolean",
      "default": false
    },
    "phoneNr": {
      "type": "string",
      "examples": ["+372 555 55 555"]
    },
    "paymentAdvance": {
      "type": ["number", "string"],
      "default": "0%"
    },
    "prepaid": {
      "type": ["number", "string"],
      "default": "0%"
    },
    "discount": {
      "type": ["number", "string"],
      "default": "0%"
    }
  },
  "additionalProperties": true
}
